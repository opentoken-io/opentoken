{
    "type": "object",
    "properties": {
        "baseUrl": {
            "type": "string",
            "minLength": 1,
            "pattern": "[^/]$"
        },
        "certificateFile": {
            "type": "string",
            "minLength": 1
        },
        "exceptionIdLength": {
            "type": "integer",
            "minimum": 1
        },
        "keyFile": {
            "type": "string",
            "minLength": 1
        },
        "port": {
            "type": "integer",
            "minimum": 1,
            "maximum": 65535
        },
        "profileMiddleware": {
            "type": "boolean"
        },
        "proxyProtocol": {
            "oneOf": [
                {
                    "type": "boolean"
                },
                {
                    "type": "object"
                }
            ]
        },
        "spdy": {
            "type": "object"
        }
    },
    "required": [
        "baseUrl",
        "exceptionIdLength",
        "port",
        "profileMiddleware",
        "proxyProtocol"
    ],
    "allOf": [
        {
            "description": "Define both certificateFile and keyFile or neither",
            "oneOf": [
                {
                    "required": [
                        "certificatFile",
                        "keyFile"
                    ]
                },
                {
                    "properties": {
                        "certificateFile": {
                            "type": "null"
                        },
                        "keyFile": {
                            "type": "null"
                        }
                    }
                }
            ]
        }
    ]
}
