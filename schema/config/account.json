{
    "type": "object",
    "properties": {
        "idLength": {
            "description": "Number of bytes for generated IDs.",
            "type": "integer",
            "minimum": 8
        },
        "lifetime": {
            "$ref": "time-offset.json"
        },
        "passwordHash": {
            "type": "object",
            "properties": {
                "algorithm": {
                    "$ref": "../meta/hash-method.json"
                },
                "derivedLength": {
                    "type": "integer",
                    "minimum": 8
                },
                "encoding": {
                    "$ref": "../meta/encoding-method.json"
                },
                "iterations": {
                    "type": "integer",
                    "minimum": 10000
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "pbkdf2"
                    ]
                }
            },
            "required": [
                "algorithm",
                "derivedLength",
                "encoding",
                "iterations",
                "type"
            ]
        },
        "passwordSaltLength": {
            "description": "Number of characters to use for a password salt.",
            "type": "integer",
            "minimum": 8
        },
        "storagePrefix": {
            "$ref": "storage-prefix.json"
        }
    },
    "required": [
        "passwordSaltLength",
        "storagePrefix"
    ]
}
