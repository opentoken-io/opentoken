{
    "type": "object",
    "oneOf": [
        {
            "description": "s3 storage engine",
            "properties": {
                "engine": {
                    "enum": [
                        "s3"
                    ]
                },
                "s3": {
                    "type": "object",
                    "properties": {
                        "bucket": {
                            "type": "string",
                            "minLength": 1
                        },
                        "region": {
                            "type": "string",
                            "enum": [
                                "us-east-1",
                                "us-west-1",
                                "us-west-2",
                                "eu-west-1",
                                "eu-central-1",
                                "ap-northeast-1",
                                "ap-northeast-2",
                                "ap-southeast-1",
                                "ap-southeast-2",
                                "sa-east-1"
                            ]
                        }
                    },
                    "required": [
                        "bucket",
                        "region"
                    ]
                }
            },
            "required": [
                "engine",
                "s3"
            ]
        }
    ]
}
