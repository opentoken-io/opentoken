{
    "account": {
        "idLength": 32,
        "lifetime": {
            "months": 6
        },
        "passwordHash": {
            "algorithm": "sha512",
            "derivedLength": 48,
            "encoding": "base64",
            "iterations": 100000,
            "type": "pbkdf2"
        },
        "passwordSaltLength": 128,
        "storagePrefix": "account/"
    },
    "debug": false,
    "encryption": {
        "primary": {
            "cipher": {
                "algorithm": "aes-256-cbc",
                "digest": "sha512",
                "iterations": 10000
            },
            "hmac": {
                "algorithm": "sha512",
                "digest": "sha512",
                "iterations": 10000
            }
        },
        "secondary": {
            "cipher": {
                "algorithm": "bf-cbc",
                "digest": "whirlpool",
                "iterations": 10000
            },
            "hmac": {
                "algorithm": "whirlpool",
                "digest": "whirlpool",
                "iterations": 10000
            }
        }
    },
    "mfa": {
        "totp": {
            "name": "OpenToken.io",
            "keyLength": 128
        }
    },
    "record": {
        "lifetimeMaximum": {
            "months": 6
        },
        "encryptionKeyFile": "encryption.key"
    },
    "registration": {
        "confirmationCodeLength": 32,
        "idHash": {
            "algorithm": "sha512",
            "hashLength": 48,
            "iterations": 100000
        },
        "idLength": 32,
        "lifetime": {
            "hours": 1
        },
        "storagePrefix": "registration/"
    },
    "schemaPath": "./schema",
    "server": {
        "baseUrl": "https://localhost:8080",
        "name": "OpenToken.io",
        "port": 8443,
        "profileMiddleware": false,
        "proxyProtocol": false
    },
    "storage": {
        "engine": "s3",
        "s3": {
            "bucket": "opentoken-io-test-s3",
            "region": "us-east-1"
        }
    }
}
