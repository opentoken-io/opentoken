{
    "account": {
        "accountDir": "account/",
        "accountIdLength": 24,
        "completeLifetime": {
            "months": 6
        },
        "idHash": {
            "algo": "sha256",
            "bytes": 24,
            "iterations": 10000
        },
        "initiateLifetime": {
            "hours": 1
        },
        "passwordSaltLength": 128,
        "secureHash": {
            "algo": "sha512",
            "bytes": 48,
            "derivation": "pbkdf2",
            "iterations": 100000
        },
        "registrationDir": "registration/",
        "registrationIdLength": 24
    },
    "debug": false,
    "encryption": {
        "primary": {
            "cipher": {
                "algo": "aes-256-cbc",
                "digest": "sha512",
                "iterations": 10000
            },
            "hmac": {
                "algo": "sha512",
                "digest": "sha512",
                "iterations": 10000
            }
        },
        "secondary": {
            "cipher": {
                "algo": "bf-cbc",
                "digest": "whirlpool",
                "iterations": 10000
            },
            "hmac": {
                "algo": "whirlpool",
                "digest": "whirlpool",
                "iterations": 10000
            }
        }
    },
    "hotp": {
        "name": "OpenToken.io",
        "keySize": 128
    },
    "login": {
        "loginDir": "/login/",
        "loginIdLength": 24,
        "loginLifetime": {
            "minutes": 15
        },
        "challenge": {
            "algo": "sha512",
            "saltLength": 128
        }
    },
    "record": {
        "expirationMaximum": {
            "months": 6
        },
        "encryptionKeyFile": "encryption.key"
    },
    "schemaPath": "./schema",
    "server": {
        "baseUrl": "https://localhost:8080/",
        "name": "OpenToken.io",
        "port": 8443,
        "profileMiddleware": false,
        "proxyProtocol": false
    },
    "storage": {
        "engine": "s3",
        "s3": {
            "bucket": "fill-this-in",
            "region": "us-east-1"
        }
    }
}
