{
    "account": {
        "accountDir": "account/",
        "accountIdLength": 24,
        "completeLifetime": {
            "months": 6
        },
        "idHash": {
            "algo": "sha256",
            "hashLength": 24,
            "iterations": 10000,
            "salt": ""
        },
        "initiateLifetime": {
            "hours": 1
        },
        "loginDir": "/login/",
        "loginHash": "sha512",
        "loginIdLength": 24,
        "loginLifetime": {
            "minutes": 15
        },
        "passwordHash": {
            "algo": "sha512",
            "hashLength": 48,
            "iterations": 100000,
            "salt": ""
        },
        "passwordSaltLength": 128,
        "registrationDir": "registration/",
        "registrationIdLength": 24
    },
    "debug": false,
    "encryption": {
        "primary": {
            "cipher": {
                "algo": "aes-256-cbc",
                "digest": "sha512",
                "iterations": 10000
            },
            "hmac": {
                "algo": "sha512",
                "digest": "sha512",
                "iterations": 10000
            }
        },
        "secondary": {
            "cipher": {
                "algo": "bf-cbc",
                "digest": "whirlpool",
                "iterations": 10000
            },
            "hmac": {
                "algo": "whirlpool",
                "digest": "whirlpool",
                "iterations": 10000
            }
        }
    },
    "hotp": {
        "name": "OpenToken.io",
        "keySize": 128
    },
    "server": {
        "baseUrl": "https://localhost:8080/",
        "name": "OpenToken.io",
        "port": 8443,
        "profileMiddleware": false,
        "proxyProtocol": false
    },
    "storage": {
        "engine": "s3",
        "s3": {
            "bucket": "opentoken-io-test-s3",
            "region": "us-east-1"
        }
    }
}
